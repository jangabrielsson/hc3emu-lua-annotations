{
    "name": "hc3emu-helper",
    "displayName": "HC3Emu helper",
    "description": "Snippets and Lua Language Server support for HC3Emu Lua scripts.",
    "version": "0.3.0",
    "license": "MIT",
    "publisher": "GsonSoft-development",
    "icon": "logo.png",
    "keywords": [
        "Lua",
        "Hc3Emu",
        "Fibaro",
        "Home Center",
        "HC3"
    ],
    "repository": {
        "url": "https://github.com/jangabrielsson/hc3emu-lua-annotations"
    },
    "categories": [
        "Other"
    ],
    "extensionDependencies": [
        "sumneko.lua"
    ],
    "engines": {
        "vscode": "^1.77.0"
    },
    "activationEvents": [
        "onLanguage:lua",
        "workspaceContains:**/*.lua"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "snippets": [
            {
                "language": "lua",
                "path": "./snippets/snippets.json"
            }
        ],
        "configuration": {
            "title": "HC3 Emulator",
            "properties": {
                "hc3emu.enableDebugLogging": {
                    "type": "boolean",
                    "default": false,
                    "description": "Enable debug logging for HC3 Emulator extension"
                }
            }
        },
        "debuggers": [
            {
                "type": "luaMobDebug",
                "label": "HC3 Lua Mobile Debug",
                "configurationAttributes": {
                    "launch": {
                        "required": ["program"],
                        "properties": {
                            "program": {
                                "type": "string",
                                "description": "Path to the Lua file to debug",
                                "default": "${workspaceFolder}/main.lua"
                            },
                            "args": {
                                "type": "array",
                                "description": "Command line arguments",
                                "default": []
                            },
                            "cwd": {
                                "type": "string",
                                "description": "Working directory",
                                "default": "${workspaceFolder}"
                            }
                        }
                    }
                },
                "configurationSnippets": [
                    {
                        "label": "HC3 QuickApp Debug",
                        "description": "Debug a HC3 QuickApp",
                        "body": {
                            "name": "HC3 QuickApp Debug",
                            "type": "luaMobDebug",
                            "request": "launch",
                            "program": "${workspaceFolder}/main.lua",
                            "cwd": "${workspaceFolder}",
                            "args": []
                        }
                    }
                ]
            }
        ],
        "commands": [
            {
                "command": "hc3emu.installDebugConfigs",
                "title": "Install HC3Emu Debug Configurations"
            }
        ],
        "taskDefinitions": [
            {
                "type": "hc3emu",
                "required": [
                    "script"
                ],
                "properties": {
                    "script": {
                        "type": "string",
                        "description": "The script to run"
                    },
                    "args": {
                        "type": "array",
                        "description": "Additional arguments",
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        ],
        "lua": {
            "library": [
                "./hc3emu-library"
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/node": "^18.16.3",
        "@types/vscode": "^1.77.0",
        "typescript": "^5.0.4",
        "vsce": "^2.15.0"
    }
}
